generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String    @id @default(uuid())
  email        String    @unique
  passwordHash String
  username     String
  xp           Int       @default(0)
  level        Int       @default(1)
  focusScore   Float     @default(100.0)
  createdAt    DateTime  @default(now())

  sessions     Session[]
  achievements UserAchievement[]

  // Gamification Fields
  streak            Int       @default(0)
  lastLogin         DateTime?
  gems              Int       @default(0)
  streakFreezeCount Int       @default(0)
  weeklyXp          Int       @default(0)
  leagueId          Int?
  league            League?   @relation(fields: [leagueId], references: [id])
}

model League {
  id      Int    @id @default(autoincrement())
  name    String @unique // Bronze, Silver, Gold, Platinum, Diamond
  order   Int    // 1 for Bronze, 2 for Silver...
  users   User[]

model World {
  id          Int      @id @default(autoincrement())
  name        String
  theme       String
  description String?
  topics      Topic[]
}

model Topic {
  id         Int        @id @default(autoincrement())
  worldId    Int
  world      World      @relation(fields: [worldId], references: [id])
  title      String
  orderIndex Int
  questions  Question[]
  sessions   Session[]
}

model Question {
  id            Int     @id @default(autoincrement())
  topicId       Int
  topic         Topic   @relation(fields: [topicId], references: [id])
  content       String
  difficulty    Int
  correctAnswer String
  options       Json
}

model Session {
  id           String     @id @default(uuid())
  userId       String
  user         User       @relation(fields: [userId], references: [id])
  topicId      Int
  topic        Topic      @relation(fields: [topicId], references: [id])
  startTime    DateTime   @default(now())
  endTime      DateTime?
  focusAverage Float?
  aiActions    AiAction[]
}

model AiAction {
  id         Int      @id @default(autoincrement())
  sessionId  String
  session    Session  @relation(fields: [sessionId], references: [id])
  actionType String
  promptUsed String?
  response   String?
  timestamp  DateTime @default(now())
}

model Achievement {
  id          String            @id
  title       String
  description String
  users       UserAchievement[]
}

model UserAchievement {
  userId        String
  user          User        @relation(fields: [userId], references: [id])
  achievementId String
  achievement   Achievement @relation(fields: [achievementId], references: [id])
  unlockedAt    DateTime    @default(now())


  @@id([userId, achievementId])
}

// Assignments / Quests
model Bounty {
  id          String       @id @default(uuid())
  title       String
  description String
  reward      Int
  type        String       // 'daily', 'epic', 'custom'
  users       UserBounty[]
}

model UserBounty {
  userId      String
  user        User     @relation(fields: [userId], references: [id])
  bountyId    String
  bounty      Bounty   @relation(fields: [bountyId], references: [id])
  completed   Boolean  @default(false)
  completedAt DateTime?

  @@id([userId, bountyId])
}

// Detailed Question Logging
model UserAnswer {
  id         String   @id @default(uuid())
  sessionId  String
  session    Session  @relation(fields: [sessionId], references: [id])
  questionId Int?
  question   Question? @relation(fields: [questionId], references: [id])
  userResponse String
  isCorrect  Boolean
  timestamp  DateTime @default(now())
}

// Aggregated Analytics
model DailyAnalytics {
  id             String   @id @default(uuid())
  date           DateTime @default(now()) @db.Date // Store just date
  totalSessions  Int      @default(0)
  avgFocusScore  Float    @default(0)
  totalXpEarned  BigInt   @default(0)
  activeUsers    Int      @default(0)
}

model CapstoneProject {
  id          String   @id @default(uuid())
  title       String
  description String
  worldId     Int
  world       World    @relation(fields: [worldId], references: [id])
  users       UserCapstone[]
}

model UserCapstone {
  id              String          @id @default(uuid())
  userId          String
  user            User            @relation(fields: [userId], references: [id])
  capstoneId      String
  capstone        CapstoneProject @relation(fields: [capstoneId], references: [id])
  githubRepoUrl   String
  status          String          // 'started', 'submitted', 'verified'
  submittedAt     DateTime?
  verifiedAt      DateTime?
}
